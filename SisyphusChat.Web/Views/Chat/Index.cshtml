@model SisyphusChat.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Chats";
}

<h2>Start a Chat</h2>

<!-- 1-on-1 Chat Form -->
<form asp-action="CreateOrOpenChat" method="post">
    <label for="recipientUserId">Select a User:</label>
    <select id="recipientUserId" name="recipientUserId" class="form-control">
        @foreach (var user in Model.Users)
        {
            <option value="@user.Id">@user.UserName</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">Start 1-on-1 Chat</button>
</form>

<hr />

<!-- Group Chat Form -->
<h3>Create a Group Chat</h3>
<form asp-action="CreateGroupChat" method="post">
    <div class="form-group">
        <label for="ChatName">Group Chat Name:</label>
        <input type="text" id="ChatName" name="ChatName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Users">Invite Users:</label>
        <select id="Users" name="SelectedUserNames" class="form-control" multiple required>
            @foreach (var user in Model.Users)
            {
                <option value="@user.UserName">@user.UserName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Create Group Chat</button>
</form>

<hr />

<!-- Display Associated Chats -->
<h3>Your Chats</h3>
<ul>
    @foreach (var chat in Model.AssociatedChats)
    {
        <li><a asp-action="ChatRoom" asp-route-chatId="@chat.Id">@chat.Name</a></li>
    }
</ul>
