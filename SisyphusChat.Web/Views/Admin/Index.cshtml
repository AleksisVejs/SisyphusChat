@{
    ViewData["Title"] = "Admin Page";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var report in new[] {
            new { Title = "Attachments Report", ReportType = "Attachments"},
            new { Title = "Chats Report", ReportType = "Chats"},
            new { Title = "Messages Report", ReportType = "Messages"},
            new { Title = "Users Report", ReportType = "Users"},
            new { Title = "User Last Message Report", ReportType = "UsersWithLastMessage"},
            new { Title = "User Activity Report", ReportType = "UserActivityReport"},
            new { Title = "Attachments Usage Report", ReportType = "AttachmentsUsageReport"},
            new { Title = "Message report for private chats Usage Report", ReportType = "MessageReportPrivateChats"},
            new { Title = "Message report for public chats Usage Report", ReportType = "MessageReportGroupChats"},
            new { Title = "Chat Participation Reports Usage", ReportType = "ChatParticipationReports"}
        })
        {
            <div class="col-md-6 col-lg-3 mb-3">
                <div class="dropdown">
                    <button class="w-100 btn-primary btn-lg dropdown-toggle" type="button" id="@report.ReportType-@Guid.NewGuid()" data-bs-toggle="dropdown" aria-expanded="false">
                        @report.Title
                    </button>
                    <ul class="dropdown-menu w-100" aria-labelledby="@report.ReportType-@Guid.NewGuid()">
                        <li>
                            <a class="dropdown-item" href="/Admin/DownloadReport?reportType=@report.ReportType">
                                <i class="fas fa-download"></i> Download
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="previewReport('@report.ReportType')">
                                <i class="fas fa-eye"></i> Preview
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function previewReport(reportType) {
        // Set the iframe src to the preview report action URL
        document.getElementById('report-preview').src = `/Report/PreviewReport?reportType=${reportType}`;
    }
</script>

<!-- Add FontAwesome for icons (optional) -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
