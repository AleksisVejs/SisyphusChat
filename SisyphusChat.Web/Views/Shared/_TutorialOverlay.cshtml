function showPageTutorial(steps) {
    let currentStep = 0;

    function showStep(index) {
        const step = steps[index];
        const element = document.querySelector(step.selector);
        
        if (!element) return;

        // Create and position tooltip
        const tooltip = createTooltip(step.title, step.content);
        positionTooltipNearElement(tooltip, element);

        // Add navigation controls
        addStepNavigation(index, steps.length);
    }

    function createTooltip(title, content) {
        const tooltip = document.createElement('div');
        tooltip.className = 'tutorial-tooltip';
        tooltip.innerHTML = `
            <div class="tutorial-content">
                <span class="step-indicator">${currentStep + 1}/${steps.length}</span>
                <h3>${title}</h3>
                <p>${content}</p>
            </div>
        `;
        document.body.appendChild(tooltip);
        return tooltip;
    }

    // Start with first step
    showStep(0);
}

