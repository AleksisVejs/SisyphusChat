    -webkit-text-fill-color: transparent;
    margin: 0;
}

.welcome-message h2.user-name {
    font-size: 3rem;
    font-weight: 800;
    margin: 0.5rem 0 0 0;
    background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-color-dark) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -0.5px;
