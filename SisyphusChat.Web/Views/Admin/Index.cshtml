@{
    ViewData["Title"] = "Admin Page";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row">
        <!-- Attachments Report Button -->
        <div class="col-md-6 col-lg-3 mb-3">
            <a href="/Report/DownloadReport?reportType=Attachments" class="btn btn-primary w-100">
                <i class="fas fa-file-excel"></i> Download Attachments Report
            </a>
        </div>
        <!-- Chats Report Button -->
        <div class="col-md-6 col-lg-3 mb-3">
            <a href="/Report/DownloadReport?reportType=Chats" class="btn btn-success w-100">
                <i class="fas fa-file-excel"></i> Download Chats Report
            </a>
        </div>
        <!-- Messages Report Button -->
        <div class="col-md-6 col-lg-3 mb-3">
            <a href="/Report/DownloadReport?reportType=Messages" class="btn btn-warning w-100">
                <i class="fas fa-file-excel"></i> Download Messages Report
            </a>
        </div>
        <!-- Users Report Button -->
        <div class="col-md-6 col-lg-3 mb-3">
            <a href="/Report/DownloadReport?reportType=Users" class="btn btn-info w-100">
                <i class="fas fa-file-excel"></i> Download Users Report
            </a>
        </div>
    </div>
</div>

<!-- Add FontAwesome for icons (optional) -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
