@model ErrorViewModel
@{
    ViewData["ErrorMessage"] = "The page you're looking for cannot be found.";
    ViewData["ErrorSubtitle"] = "It may have been moved, renamed, or deleted.";
}

<style>
    body {
        background-color: #D9CCF6;
    }

    .error-content {
        min-height: 70vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .error-title {
        color: #6F228A;
    }

    .error-text {
        color: #9A4CAD;
        font-weight: 400;
    }

    .btn-home {
        background-color: #65558F;
        border-color: #65558F;
        color: white;
        border-radius: 8px;
    }

        .btn-home:hover {
            background-color: #8575AF;
            border-color: #8575AF;
            color: white;
        }
</style>

<div class="container-fluid error-content">
    <h1 class="error-title display-1 fw-bold">Oopsie!</h1>

    <p class="error-text fs-2 mb-1">@ViewData["ErrorMessage"]</p>

    <p class="error-text mb-4">@ViewData["ErrorSubtitle"]</p>

    <div class="d-flex justify-content-center">
        <a href="/" class="btn btn-home btn-lg px-4">
            Return to homepage
        </a>
    </div>
</div>
