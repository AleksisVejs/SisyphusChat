<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tab Switching
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabButtons.forEach(button => {
        button.addEventListener('click', () => {
            const tabId = button.dataset.tab;
            
            // Update active states
            tabButtons.forEach(btn => btn.classList.remove('active'));
            tabPanes.forEach(pane => pane.classList.remove('active'));
            
            button.classList.add('active');
            document.getElementById(tabId).classList.add('active');
        });
    });

    // Existing user search and filter functionality
    const userSearch = document.getElementById('userSearch');
    const loginFilter = document.getElementById('loginFilter');
    const reportFilter = document.getElementById('reportFilter');
    const userRows = document.querySelectorAll('.user-row');

    function filterUsers() {
        const searchTerm = userSearch.value.toLowerCase();
        const filterValue = loginFilter.value;
        const reportValue = reportFilter.value;
        const now = new Date();

        userRows.forEach(row => {
            const username = row.querySelector('td:first-child').textContent.toLowerCase();
            const lastLogin = row.querySelector('td:nth-child(4)').textContent;
            const reportCount = parseInt(row.querySelector('.badge').textContent);
            
            let showRow = username.includes(searchTerm);

            // Login filter
            if (showRow && filterValue !== 'all') {
                const loginDate = lastLogin !== 'Never' ? new Date(lastLogin) : null;
                
                switch(filterValue) {
                    case 'today':
                        showRow = loginDate?.toDateString() === now.toDateString();
                        break;
                    case 'week':
                        const weekAgo = new Date(now - 7 * 24 * 60 * 60 * 1000);
                        showRow = loginDate && loginDate > weekAgo;
                        break;
                    case 'never':
                        showRow = lastLogin === 'Never';
                        break;
                }
            }

            // Report filter
            if (showRow && reportValue !== 'all') {
                switch(reportValue) {
                    case 'hasReports':
                        showRow = reportCount > 0;
                        break;
                    case 'noReports':
                        showRow = reportCount === 0;
                        break;
                    case 'highReports':
                        showRow = reportCount >= 5;
                        break;
                }
            }

            row.style.display = showRow ? '' : 'none';
        });
    }

    if (userSearch && loginFilter && reportFilter) {
        userSearch.addEventListener('input', filterUsers);
        loginFilter.addEventListener('change', filterUsers);
        reportFilter.addEventListener('change', filterUsers);
    }

    // Notification form handling
    const notificationForm = document.getElementById('adminNotificationForm');
    if (notificationForm) {
        notificationForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const message = document.getElementById('notificationMessage').value;
            
            try {
                const response = await fetch('/Admin/SendNotification', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ message })
                });
                
                if (response.ok) {
                    alert('Notification sent successfully');
                    document.getElementById('notificationMessage').value = '';
                } else {
                    alert('Failed to send notification');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to send notification');
            }
        });
    }

    // Reports filtering
    const reportSearch = document.getElementById('reportSearch');
    const reportTypeFilter = document.getElementById('reportTypeFilter');
    const reportDateFilter = document.getElementById('reportDateFilter');
    const reportRows = document.querySelectorAll('.report-row');

    function filterReports() {
        const searchTerm = reportSearch.value.toLowerCase();
        const typeFilter = reportTypeFilter.value;
        const dateFilter = reportDateFilter.value;
        const now = new Date();

        reportRows.forEach(row => {
            const username = row.querySelector('td:nth-child(5)').textContent.toLowerCase();
            const reason = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
            const type = row.querySelector('.report-type-badge').textContent.trim();
            const dateStr = row.querySelector('td:nth-child(6)').textContent;
            const reportDate = new Date(dateStr);

            let showRow = (username.includes(searchTerm) || reason.includes(searchTerm));

            // Type filter
            if (showRow && typeFilter !== 'all') {
                // Convert PascalCase to kebab-case for comparison
                const reportType = type
                    .replace(/([A-Z])/g, '-$1')     // Add hyphen before capitals
                    .toLowerCase()                   // Convert to lowercase
                    .replace(/^-/, '')              // Remove leading hyphen
                    .replace(/\s+/g, '-');          // Replace any spaces with hyphens
                
                showRow = reportType === typeFilter;
            }

            // Date filter
            if (showRow && dateFilter !== 'all') {
                switch(dateFilter) {
                    case 'today':
                        showRow = reportDate.toDateString() === now.toDateString();
                        break;
                    case 'week':
                        const weekAgo = new Date(now - 7 * 24 * 60 * 60 * 1000);
                        showRow = reportDate > weekAgo;
                        break;
                    case 'month':
                        const monthAgo = new Date(now - 30 * 24 * 60 * 60 * 1000);
                        showRow = reportDate > monthAgo;
                        break;
                }
            }

            row.style.display = showRow ? '' : 'none';
        });
    }

    if (reportSearch && reportTypeFilter && reportDateFilter) {
        reportSearch.addEventListener('input', filterReports);
        reportTypeFilter.addEventListener('change', filterReports);
        reportDateFilter.addEventListener('change', filterReports);
    }
});

function previewReport(reportType) {
    window.open(`/Admin/PreviewReport?reportType=${reportType}`, '_blank');
}


function banUser(form) {
    const formData = new FormData(form);
    
    fetch('/Admin/BanUser', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Update the user row UI
            const userId = formData.get('userId');
            const duration = formData.get('duration');
            updateUserRowAfterBan(userId, data.banEnd, duration === 'Permanent');
        } else {
            alert('Failed to ban user: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to ban user');
    });
    
    return false;
}

function updateUserRowAfterBan(userId, banEnd, isPermanent) {
    const userRow = document.querySelector(`tr[data-user-id="${userId}"]`);
    if (!userRow) return;
    
    // Update status badge
    const statusBadge = userRow.querySelector('.status-badge');
    statusBadge.classList.remove('active');
    statusBadge.classList.add('banned');
    statusBadge.innerHTML = isPermanent ? 
        '<span>Permanently Banned</span>' : 
        `<span>Banned until ${new Date(banEnd).toUTCString()}</span>`;
    
    // Replace ban button with unban button
    const actionCell = userRow.querySelector('td:last-child');
    actionCell.innerHTML = `
        <form onsubmit="return unbanUser(this);" class="d-inline">
            <input type="hidden" name="userId" value="${userId}" />
            <button type="submit" class="btn-unban">
                <i class="fas fa-undo"></i> Unban
            </button>
        </form>
    `;
}

function unbanUser(form) {
    const formData = new FormData(form);
    const userId = formData.get('userId');
    
    fetch('/Admin/UnbanUser', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            updateUserRowAfterUnban(userId);
        } else {
            alert('Failed to unban user: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to unban user');
    });
    
    return false;
}

function updateUserRowAfterUnban(userId) {
    const userRow = document.querySelector(`tr[data-user-id="${userId}"]`);
    if (!userRow) return;
    
    // Update status badge
    const statusBadge = userRow.querySelector('.status-badge');
    statusBadge.classList.remove('banned');
    statusBadge.classList.add('active');
    statusBadge.innerHTML = '<span>Active</span>';
    
    // Replace unban button with ban dropdown
    const actionCell = userRow.querySelector('td:last-child');
    actionCell.innerHTML = `
        <div class="dropdown">
            <button class="btn-ban dropdown-toggle" type="button" 
                    id="banDropdown_${userId}" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                <i class="fas fa-ban"></i> Ban
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                ${getBanDurationOptions(userId)}
            </ul>
        </div>
    `;
}

function getBanDurationOptions(userId) {
    const durations = [
        { Label: "24 Hours", Value: "TwentyFourHours" },
        { Label: "One Week", Value: "OneWeek" },
        { Label: "One Month", Value: "OneMonth" },
        { Label: "Permanent Ban", Value: "Permanent" }
    ];
    
    return durations.map(duration => `
        <li>
            <form onsubmit="return banUser(this);">
                <input type="hidden" name="userId" value="${userId}" />
                <input type="hidden" name="duration" value="${duration.Value}" />
                <button type="submit" class="dropdown-item">
                    ${duration.Label}
                </button>
            </form>
        </li>
    `).join('');
}

// Function to show user reports
function showUserReports(username) {
    // Switch to reports tab
    const reportsTabButton = document.querySelector('[data-tab="reports-list"]');
    reportsTabButton.click();

    // Set the search field to the username
    const reportSearch = document.getElementById('reportSearch');
    reportSearch.value = username;
    
    // Trigger the filter
    reportSearch.dispatchEvent(new Event('input'));
}
</script>
