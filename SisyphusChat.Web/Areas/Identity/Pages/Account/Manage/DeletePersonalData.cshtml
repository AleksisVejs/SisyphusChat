@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="delete-account-container">
    <div class="delete-account-header">
        <h3>Delete Account</h3>
        <p class="text-muted">This action is permanent and cannot be undone.</p>
    </div>

    <div class="delete-account-content">
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            <p>
                <strong>Warning:</strong> Deleting your account will permanently remove all your data, including:
            </p>
            <ul>
                <li>Your profile information</li>
            </ul>
        </div>

        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating position-relative mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" 
                           aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <button type="button" id="togglePasswordVisibility" class="toggle-password">
                        <i id="passwordIcon" class="fas fa-eye"></i>
                    </button>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="btn-delete" type="submit">
                <i class="fas fa-trash-alt me-2"></i>
                Delete my account permanently
            </button>
        </form>
    </div>
</div>

<style scoped>
.delete-account-container {
    max-width: 600px;
    margin: 0 auto;
}

.delete-account-header {
    text-align: center;
    margin-bottom: 2rem;
}

.delete-account-header h3 {
    color: var(--accent-color);
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.delete-account-content {
    background: rgba(var(--bg-color-rgb), 0.5);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid rgba(var(--text-color-rgb), 0.1);
}

.alert-danger {
    background: rgba(220, 53, 69, 0.1);
    border: 1px solid rgba(220, 53, 69, 0.2);
    color: #dc3545;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.alert-danger i {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    display: block;
}

.alert-danger ul {
    margin-bottom: 0;
    padding-left: 1.5rem;
}

.alert-danger li {
    margin-bottom: 0.5rem;
}

.form-floating {
    position: relative;
    margin-bottom: 1.5rem;
}

.form-control {
    background: rgba(var(--bg-color-rgb), 0.5);
    border: 1px solid rgba(var(--text-color-rgb), 0.1);
    color: var(--text-color) !important;
    border-radius: 12px;
    padding: 1rem;
    height: auto;
    transition: all 0.3s ease;
    -webkit-text-fill-color: var(--text-color);
}

.form-control:focus {
    background: rgba(var(--bg-color-rgb), 0.7);
    border-color: var(--accent-color);
    box-shadow: 0 0 0 2px rgba(var(--accent-color-rgb), 0.2);
    color: var(--text-color) !important;
}

.toggle-password {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--text-color);
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
}

.toggle-password:hover {
    color: var(--accent-color);
}

.btn-delete {
    width: 100%;
    padding: 1rem;
    border-radius: 12px;
    border: none;
    background: #dc3545;
    color: white;
    font-weight: 500;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.btn-delete:hover {
    background: #c82333;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
}

.text-danger {
    color: #dc3545 !important;
    font-size: 0.875rem;
    margin-top: 0.5rem;
    display: block;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("togglePasswordVisibility")?.addEventListener("click", function(e) {
            e.preventDefault();
            var passwordInput = document.getElementById("Input_Password");
            var passwordIcon = document.getElementById("passwordIcon");
            
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                passwordIcon.classList.remove("fa-eye");
                passwordIcon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                passwordIcon.classList.remove("fa-eye-slash");
                passwordIcon.classList.add("fa-eye");
            }
        });
    </script>
}
